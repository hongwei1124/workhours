<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset
				name="details"
				label="Please enter your work hours."
	>
		<field
				name="id"
				type="string"
				label="Work id"
				description="work id"
				size="1"
				required="true"
				readonly = "true"
				default=""
		>
		</field>
		<field
				name="director_email"
				type="string"
				label="Director email"
				description="Director email for the project"
				size="1"
				required="true"
				readonly = "true"
				default=""
				>
		</field>
		<field
				name="applicant_name"
				type="string"
				label="Applicant's name"
				description="Applicant's name"
				size="1"
				required="true"
				readonly = "true"
				default=""
		/>
		<field
				name="work_desc"
				type="string"
				label="Work Description"
				description="Work Description"
				size="1"
				required="true"
				readonly = "true"
				default=""
		>
		</field>
        <field 
				name="hours_submitted" 
				type="integer" 
				label="hours worked"
				description="hours worked"
				required="true"
				readonly = "true"
				size="1"
				first="1"
				last="100"
				step="1"
				/>
		<field
				name="hours_approved"
				type="integer"
				label="hours worked"
				description="hours worked"
				required="true"
				size="1"
				first="1"
				last="100"
				step="1"
		/>
		<field 
				name="start_datetime"
				type="string"
				label="Start date time"
				description="Start date time"
				size="1"
				required="true"
				readonly = "true"
				default=""
				/>
		<field
				name="complete_datetime"
				type="string"
				label="Complete date time"
				description="Complete date time"
				size="1"
				required="true"
				readonly = "true"
				default=""
		/>
		<field name="approved" type="radio" default="1" label="Approve/Reject?" description="" class="btn-group">
			<option value="1">Approve</option>
			<option value="2">Reject</option>
		</field>
		<field name="approve_comment" type="text" default="" label="Comment" description="" size="4" />
    </fieldset>
</form>